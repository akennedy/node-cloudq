extend layout

block content
  .row
    .hero-unit.span8.offset2
      h1 Administrator Login
  .row(ng-app)
    .span6.offset3.well
      h2 Enter Admin Username and Password
      .alert.alert-error(ng-show="error")
        {{error}}
      p This form provides administration access to CloudQ.  If you do not know the administrator username and password please contact your network administrator.
      form(action="/sessions", method="POST")
        p
          label Username
          input(name='username', ng-model="user.username", autofocus, required)
        p
          label Password
          input(name='password', type='password', ng-model="user.password", required)
        p
          button.btn.btn-primary Login
      p
        a.btn.btn-danger(href='/forgot_password') Forgot Password?
